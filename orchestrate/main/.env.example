# Perplexity Chat Backend Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./perplexity_chat.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/perplexity_chat

# Real Data Source API Keys (only needed if frontend enables real data sources)
GOOGLE_ADS_API_KEY=your-google-ads-api-key
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
FACEBOOK_ADS_API_KEY=your-facebook-ads-api-key
FACEBOOK_ADS_APP_ID=your-facebook-ads-app-id
GOOGLE_ANALYTICS_API_KEY=your-google-analytics-api-key
GOOGLE_ANALYTICS_PROPERTY_ID=your-google-analytics-property-id

# Redis Configuration (for production scaling)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# AI Service Configuration
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Campaign Generation Configuration
MAX_CAMPAIGNS_PER_REQUEST=5
CAMPAIGN_TIMEOUT_SECONDS=30
